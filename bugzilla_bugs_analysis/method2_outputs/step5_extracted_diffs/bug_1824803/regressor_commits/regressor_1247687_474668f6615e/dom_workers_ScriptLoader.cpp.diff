+    if (!moduleRequest->IsTopLevel()) {
+      moduleRequest->Cancel();
+    } else {
+      moduleRequest->LoadFailed();
+    }
+  }
+
+  moduleRequest->OnFetchComplete(loadContext->mLoadResult);
+  return true;
