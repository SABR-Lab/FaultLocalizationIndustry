+bool AnnexB::ConvertSampleToHVCC(mozilla::MediaRawData* aSample) {
+  if (IsHVCC(aSample)) {
+    return ConvertHVCCTo4BytesHVCC(aSample).isOk();
+  }
+  if (!IsAnnexB(aSample)) {
+    // Not AnnexB, nothing to convert.
+    return true;
+  }
+
